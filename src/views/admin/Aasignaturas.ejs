<%- include("./panelPartials/header.ejs")  %> 
     <!--inicio /#page-content-wrapper -->
        <% if(login){ %>
            <style>
                .a-active{
                    color:var(--main-text-color);
                }
            </style>
             <div class="p-2">
            <div class="container bg-white ">
                <div class="table-responsive row justify-content-center">
                    <div class="table-wrapper">
                        <div class="table-title">
                            <div class="row pt-2">
                                <div class="col-sm-10"><h2>Clases</b></h2></div>
                                <div class="col-sm-2">
                                   <a href="/admin/createA"  class="btn btn-primary"><i class="far fa-plus-square"></i>  Nuevo</a>
                                </div>
                            </div>
                        </div>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="col-1">id</th>
                                    <th class="col-2">Nombre</th>
                                    <th class="col-2">Profesor</th>
                                    <th class="col-2">grupo</th>
                                    <th class="col-2">Hora</th>
                                    <th class="col-2">Dia</th>
                                    <th class="col-1">Acciones</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                <% if (data) { %>
                                    <% for(var i = 0; i < data.length; i++) { %>
                                      <tr>
                                        <td><%= data[i].id %></td>
                                        <td><%= data[i].name %></td>
                                        <td><%= data[i].teacher %></td>
                                        <td><%= data[i].group %></td>
                                        <td><%= data[i].hour %> am</td>
                                        <td><%= data[i].days %></td>
                                        <td>
                                    
                                            <a class="edit"  href="/admin/updateA/<%= data[i].id%>" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                                            <a class="delete" href="/admin/deleteA/<%= data[i].id%>" title="admin" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                                        </td>
                                      </tr>
                                    <% } %>
                                  <% } %>
                                   
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>     
        </div>
         <% }else{ window.location="/"}%>  <!--{ver como redireccionar} -->
    <!--fin /#page-content-wrapper -->

    
